<form id="edit-blogpost">
    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input class="input" type="text" placeholder="{{blogpost.title}}" id="update-title">
        </div>
    </div>

    <div class="field">
        <label class="label">Content</label>
        <div class="control">
            <textarea class="textarea" placeholder="{{blogpost.description}}" id="update-description"></textarea>
        </div>
    </div>

    <fieldset disabled>
        <div class="field">
            <label class="label">Status</label>
            <div class="control">
                <input class="input" type="text" placeholder="Fill in all required inputs, no less than 5 characters are allowed" id="update-status">
            </div>
        </div>
    </fieldset>

    <div class="field is-grouped">
        <div class="control">
            <button id="submit" class="button is-link blogUpdateBtn">Update</button>
        </div>
        <div class="control">
            <button id="cancel" class="button is-link is-light updateCancelBtn">Cancel</button>
        </div>
    </div>
</form>
<script src="/javascript/editpost.js"></script>