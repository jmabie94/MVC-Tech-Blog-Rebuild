<form id="new-blogpost">
  <div class="field">
    <label class="label">Title</label>
    <div class="control">
      <input class="input" type="text" placeholder="Blog Post Title" id="new-title">
    </div>
  </div>

  <div class="field">
    <label class="label">Content</label>
    <div class="control">
      <textarea class="textarea" placeholder="Write Your Blog Post Here!" id="new-description"></textarea>
    </div>
  </div>

  <fieldset disabled>
    <div class="field">
      <label class="label">Status</label>
      <div class="control">
        <input class="input" type="text" placeholder="Fill in all required inputs, no less than 5 characters are allowed" id="new-status">
      </div>
    </div>
  </fieldset>

  <div class="field is-grouped">
    <div class="control">
      <button id="submit" class="button is-link blogSubmitBtn">Submit</button>
    </div>
    <div class="control">
      <button id="cancel" class="button is-link is-light blogCancelBtn">Cancel</button>
    </div>
  </div>
</form>

<script src="/javascript/newpost.js"></script>