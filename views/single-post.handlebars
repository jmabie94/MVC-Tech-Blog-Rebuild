<div class="card">
    <div class="card-content">
        <div class="media">
            <div class="media-left">
                <figure class="image is-48x48">
                    <img src="/images/whosethot.png" alt="Placeholder image">
                </figure>
            </div>
            <div class="media-content">
                <p class="title is-2">{{blogPost.title}}</p>
                <p class="subtitle is-4">
                    <a href="/user/{{blogPost.user_id}}">{{blogPost.user}}</a>
                </p>
            </div>
        </div>

        <div class="content">
            {{blogPost.description}}
            <br>
            <p>Date Posted: {{format_date blogPost.date}}</p>
        </div>

        <footer class="card-footer">
            {{#if blogPost.comments}}
            <div class="card-comments">
                {{#each blogPost.comments as |comment| }}
                <div class="comment-title">
                    <p class="title is-4">{{comment.user}}</p>
                    <p class="subtitle is-6">{{format_date comment.date}}</p>
                </div>
                {{#if comment.usersComment}}
                <div class="comment-content is-highlighted">
                    {{comment.text}}
                </div>
                <div>
                    <button class="button is-light editCommentBtn">Edit Comment
                    </button>
                    <button class="button is-danger deleteCommentBtn">Delete Comment
                    </button>
                </div>
                <br>
                {{else}}
                <div class="comment-content">
                    {{comment.text}}
                </div>
                <br>
                {{/if}}
                {{/each}}
                <button class="button is-primary addCommentBtn">Add a Comment</button>
                {{else}}
                <button class="button is-primary addCommentBtn">Add the First Comment!</button>
                {{/if}}
            </div>
        </footer>

    </div>
</div>

<script src="/javascript/newcomment.js"></script>
<script src="/javascript/editcomment.js"></script>
<script src="/javascript/deletecomment.js"></script>
