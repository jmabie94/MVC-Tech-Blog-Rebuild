<form id="login-form">
  <div class="field">
    <label class="label">Email</label>
    <div class="control has-icons-left has-icons-right">
      <input 
      class="input" 
      type="email" 
      placeholder="Email"
      id="email-login">
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control has-icons-left">
      <input 
      class="input" 
      type="password" 
      placeholder="Password"
      id="password-login">
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  {{!-- adding status field to the login page --}}
  <fieldset disabled style="margin-bottom: 20px;">
    <div class="field">
      <label class="label">Status</label>
      <div class="control">
        <input class="input" type="text" placeholder="Fill in all required values" id="log-status">
      </div>
    </div>
  </fieldset>

  <div class="field is-grouped">
    <p class="control">
      <button type="submit" class="button is-success loginBtn">
        Login
      </button>
    </p>
    <p class="control has-icons-left has-icons-right" style="margin-top: 7.63px;">
      Or
    </p>
    <p class="control"> 
      <button id="signup-btn" class="button is-light goSignUpBtn">
        Sign Up
      </button>
    </p>
  </div>
</form>

<script src="/javascript/login.js"></script>
